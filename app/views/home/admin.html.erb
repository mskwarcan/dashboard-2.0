<div class="container clearfix">
		<table id="users" cellspacing=0>
			<tr>
		    <th width="150">Client</th>
		    <th>Facebook</th>
		    <th>Twitter</th>
				<th>Analytics</th>
				<th>Mailchimp</th>
		    <th></th>
		    <th></th>
		    <th></th>
		  </tr>
			<% @users.each do |user| %>
			  <tr>
					<td><%= user.client %></td>	
			    <td><% if user.fb_authenticated == true %><%= user.facebook_token %><% else %><a href="#" class="add">Add Page ID</a>
						<form id="facebook_<%= user.username %>" class="facebook" action="/facebook_id">
							<input type="hidden" value="<%= user.username %>" name="user">
							<input type="text" value="" name="id">
							<input type="submit" value="Add">
						</form>
					<% end %></td>
			    <td><% if user.twitter_authenticated == true %>Yes
							<% else %>
							<form id="twitter_<%= user.username %>" action="/twitter_register">
								<input type="hidden" value="<%= user.username %>" name="user">
								<input type="submit" value="Register">
							</form>
							<% end %></td>
							<td><% if user.analytics_authenticated == true %><%= user.analytics %><% else %><a href="#" class="google">Add Analytics ID</a>
								<form id="analytics_<%= user.username %>" class="analytics" action="/analytics">
									<input type="hidden" value="<%= user.username %>" name="user">
									<input type="text" value="" name="id">
									<input type="submit" value="Add">
								</form>
							<% end %></td>
							<td><% if user.mailchimp_authenticated == true %>Yes
									<% else %><a href="#" class="mail">Add MailChimp API Key</a>
									<form id="mailchimp_<%= user.username %>" class="chimp" action="/mailchimp">
										<a href="http://admin.mailchimp.com/account/api" target="_blank">Get a Key</a>
										<input type="hidden" value="<%= user.username %>" name="user">
										<input type="text" value="" name="id">
										<input type="submit" value="Add">
									</form>
							<% end %></td>
			    <td><%= link_to image_tag('/images/eye.png'), user %></td>
			    <td><%= link_to image_tag('/images/edit.png'), edit_user_path(user) %></td>
			    <td><%= link_to image_tag('/images/delete.png'), user, :confirm => 'Are you sure?', :method => :delete %></td>
			  </tr>
			<% end %>
		</table>
</div>
