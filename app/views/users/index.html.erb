<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Client</th>
    <th>Password</th>
    <th>Twitter token</th>
    <th>Twitter secret</th>
    <th>Linkedin token</th>
    <th>Linkedin secret</th>
    <th>Facebook token</th>
    <th>Fb authenticated</th>
    <th>Twitter authenticated</th>
    <th>Linkedin authenticated</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.client %></td>
    <td><%= user.password %></td>
    <td><%= user.twitter_token %></td>
    <td><%= user.twitter_secret %></td>
    <td><%= user.linkedin_token %></td>
    <td><%= user.linkedin_secret %></td>
    <td><%= user.facebook_token %></td>
    <td><%= user.fb_authenticated %></td>
    <td><%= user.twitter_authenticated %></td>
    <td><%= user.linkedin_authenticated %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

