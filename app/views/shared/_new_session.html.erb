<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p class="infield"><%= f.label :email %>
  <%= f.text_field :email, :class => "text" %></p>

  <p class="infield"><%= f.label :password %>
  <%= f.password_field :password, :class => "text" %></p>

  <% if devise_mapping.rememberable? -%>
    <p class="remember_me"><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "remember" %></p>
  <% end -%>

  <p><%= f.submit "Sign in" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
