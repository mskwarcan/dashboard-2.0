<h2>Upgrade Your Account</h2>
<p>Please choose what suites your needs best. <a href="#">Upgrade Comparison Chart</a></p>

<%= form_for @card do |f| %>
<% if @card.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@card.errors.count, "error") %> prohibited this account from being saved:</h2>

    <ul>
    <% @card.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
	<label>Choose Account Upgrade</label><br />
	<select name="tier">
		<option value="1000">Individual Profile - $10/month</option>
		<option value="4000">5 Profile Pack - $40/month</option>
		<option value="7500">10 Profile Pack - $75/month</option>
		<option value="12500">20 Profile Pack - $125/month</option>
		<option value="20000">40 Profile Pack - $200/month</option>
		<option value="25000">Unlimited Profile Pack - $250/month</option>
	</select>
	<h3>Credit Card Details </h3>
	<label>Credit Card Type</label><br />
	<select name="card[card_type]">
		<option value="visa">Visa</option>
		<option value="mastercard">MasterCard</option>
		<option value="discover">Discover</option>
		<option value="americanexpress">American Express</option>
	</select><br />
	<%= f.label :first_name, 'First Name' %><br />
	<%= f.text_field :first_name %><br />
	<%= f.label :last_name, 'First Last' %><br />
	<%= f.text_field :last_name %><br />
	<%= f.label :number, 'Credit Card Number' %><br />
	<%= f.text_field :number %><br />
	<%= f.label :ccv, 'CCV' %><br />
	<%= f.text_field :ccv %><br />
	<%= f.label :month, 'Expiration Date' %><br />
	<%= select_month(Date.today.beginning_of_year, :field_name => :month, :prefix => :credit_card) %> /
	<%= select_year(Date.today, :start_year => Time.now.year, :end_year => 10.years.from_now.year, :field_name => :year, :prefix => :credit_card) %><br />
	<%= f.submit "Upgrade Your Account", :class => 'submit_button' %>
<% end %>
</div>
