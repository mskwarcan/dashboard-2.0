<% if @user.twitter_authd?(@user) %>
<h2 class="cleft">Your Twitter</h2>
	<% client = User.twitter(@user) %>
	<img class="twitter" src="<%= client.info["profile_image_url"] %>" /><h3 class="nobot"><%= client.info["screen_name"] %></h3>
	Followers: <%= client.info["followers_count"] %><br />
	<b>New Followers this Month:</b> <%= client.info["followers_count"] - @user.twitter_monthly_count %>

<h3 class="nobot">Your Recent Tweets</h3>	
<% tweets = client.home_timeline() %>
<ul class="tweets">
<% tweets.each do | tweet |%>
	<li class="clearfix"><img class="twitter" src="<%= tweet["user"]["profile_image_url"] %>" /> <b><a target="_blank" href="http://twitter.com/#!/<%= tweet["user"]["screen_name"] %>"><%= tweet["user"]["screen_name"] %></a></b><br />
	<%= tweet["text"] %> <br />
	</li>
<% end %>
<ul>

<% else %>
	<img src="/images/twitter.jpg" />
	<h3>Register Your account on Twitter!</h3>
	<a href="/register" class="register">Register on Twitter</a>
<% end %>
