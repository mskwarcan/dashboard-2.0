<% if @user.twitter_authd?(@user) %>
<img class="logo" src="/images/twitter.png" />
<div>
	<% client = User.twitter(@user) %>
	<img class="twitter" src="<%= client.info["profile_image_url"] %>" />
	<h3 class="noMargin"><%= client.info["screen_name"] %></h3>
	<span class="number">Followers: <%= client.info["followers_count"] %></span>
</div>
	<% count = client.info["followers_count"] - @user.twitter_monthly_count %>
	<div class="count <% if count > 0 %>plus<% elsif count < 0 %>negative<% end %>"><span class="label">Followers this Month</span> <span class="divider"> <%= count %></span></div>

<h3 class="nobot">Your Recent Tweets</h3>	
<% tweets = client.user_timeline() %>
<ul class="tweets">
<% tweets.each do | tweet |%>
	<li class="clearfix"><img class="twitter" src="<%= tweet["user"]["profile_image_url"] %>" /> 
	<div class="status">
		<b><a target="_blank" href="http://twitter.com/#!/<%= tweet["user"]["screen_name"] %>"><%= tweet["user"]["screen_name"] %></a></b><br />
	<%= tweet["text"] %>
	</div>
	</li>
<% end %>
</ul>

<% else %>
	<h3>Register Your account on Twitter!</h3>
	<p>Please contact <a href="mailto:steph@balcomagency.com">Steph</a> at The Balcom Agency in order to get your twitter account set up.</p>
<% end %>
