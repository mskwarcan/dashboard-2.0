<h2>Sign up</h2>
<div class="sign_up">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name, :class => 'text' %></p>

  <p><%= f.label :email %><br />
  <%= f.email_field :email, :class => 'text' %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password, :class => 'text' %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => 'text' %></p>

  <p><%= f.label :phone %><br />
  <%= f.text_field :phone, :class => 'text' %></p>

  <p><%= f.label :type_of_user %><br />
  <select name="user[type_of_user]">
		<option value="viewer">Viewer</option>
		<option value="admin">Administrator</option>
	</select>
	</p>

  <p><%= f.submit "Sign up", :class => 'submit_button' %></p>
<% end %>
</div>

<%= render :partial => "devise/shared/links" %>
